---
import { Icon } from 'astro-icon';
import { SWITCHES } from '~/config.mjs';

const { url } = Astro.props;
---

{
	SWITCHES.youtubeLinks && (
		<div class="py-4 not-prose">
			<div class="flex justify-center items-center">
				<a
					class="btn text-white text-lg bg-red-600 hover:bg-red-800 dark:bg-red-900 dark:hover:bg-red-700"
					href={url}
					target="_blank"
					rel="noopener"
				>
					<Icon name="tabler:brand-youtube" class="w-10 h-10 mr-2 -ml-1.5" /> Video Tutorial on YouTube
				</a>
			</div>
		</div>
	)
}
