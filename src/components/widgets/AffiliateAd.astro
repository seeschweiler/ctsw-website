---
import { Icon } from 'astro-icon';
import { SWITCHES } from '~/config.mjs';
---

{
	SWITCHES.affiliateLinks && (
		<section class="pt-10 scroll-mt-16" id="affiliatead">
			<div class="px-4 py-2 mx-auto max-w-4xl lg:px-8 lg:py-3 bg-gray-50 dark:bg-slate-800">
				<div class="max-w-xl mx-auto text-center lg:max-w-2xl">
					<p class="text-base text-primary-600 dark:text-primary-200 font-semibold tracking-wide uppercase">
						Top Online Courses
					</p>
					<h4 class="text-xl md:text-2xl font-bold leading-tighter tracking-tighter mb-1 font-heading">
						For Beginners And Experts
					</h4>
					<p class="max-w-3xl mx-auto sm:text-center text-sm text-gray-600 dark:text-slate-400">
						Build your <strong>web development skills</strong> today. Find the right web development online courses on
						Udemy. Start learning JavaScript, Node.js, React, Vue, Svelte, Angular, and many more ...
					</p>
					<div class="py-4 not-prose">
						<div class="flex justify-center items-center">
							<a
								class="btn text-white text-sm bg-purple-600 hover:bg-purple-800 dark:bg-purple-700 dark:hover:bg-purple-500"
								href="https://click.linksynergy.com/deeplink?id=a1o1REVAqJg&mid=47907&murl=https%3A%2F%2Fwww.udemy.com%2Fcourses%2Fdevelopment%2Fweb-development%2F"
								target="_blank"
								rel="noopener"
							>
								<Icon name="tabler:school" class="w-5 h-5 mr-2 -ml-1.5" /> Check it out on Udemy.com *
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	)
}
