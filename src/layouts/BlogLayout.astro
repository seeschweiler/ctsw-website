---
import Layout from '~/layouts/PageLayout.astro';
import AffiliateAd from '~/components/widgets/AffiliateAd.astro';
import LeanpubAd from '~/components/widgets/LeanpubAd.astro';
const { meta } = Astro.props;
---

<Layout {meta}>
	<AffiliateAd />
	<LeanpubAd />
	<section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
		<header>
			<h1
				class="text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-8 md:mb-16 font-heading"
			>
				<slot name="title" />
			</h1>
		</header>
		<slot />
	</section>
</Layout>
